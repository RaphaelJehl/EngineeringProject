<%- include ("includes/header", { "title" : "My shared links" }) %>

    <div id="homeApp"
        style="background-image: url('<%= request.mainURL %>/public/img/francetv.png'); background-position: center; background-size: cover; background-repeat: no-repeat; width: 100%; height: 0; padding-bottom : 50%;">
        <div class="container" style=" margin-bottom: 50px;">
            <%- include ("includes/ResponseAlert", { "request" : request }) %>

                <div class="row">
                    <div class="col-md-12">
                        <h1>My shared links</h1>
                    </div>
                </div>

                <div class="row">
                    <% links.forEach(function (link) { const singleFile=link.file; %>
                        <div class="col-md-4" style="margin-top: 30px;">

                            <div class="card">
                                <div class="card-body" style="font-size: 100px; text-align: center; height: 300px;">
                                    <i class="fa fa-file-text-o"></i>

                                    <form method="POST" action="<%= request.mainURL %>/DeleteLink"
                                        onsubmit="return confirm('Are you sure you want to delete this link ?');">
                                        <input type="hidden" name="_id" value="<%= link._id %>" required />
                                        <input type="submit" class="btn btn-danger" value="Delete" />
                                    </form>
                                </div>

                                <div class="card-footer">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h3>
                                                <%= singleFile.name%>
                                            </h3>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>

        </div>
    </div>

<%- include ("includes/footer") %>
